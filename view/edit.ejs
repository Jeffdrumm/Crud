<h2>Editar Registro</h2>
  <% data.forEach(function(details) { %>
    <form action="/edit/<%= details._id %>" method="POST">
      <input type="text" value="<%= details.nome %>" name="nome">
      <input type="text" value="<%= details.CPF %>" name="CPF">
      <input type="text" value="<%= details.sexo %>" name="sexo">
      <input type="text" value="<%= details.telefone %>" name="telefone">
      <input type="text" value="<%= details.idade %>" name="idade">
      <input type="text" value="<%= details.endereco %>" name="endereco">
      <input type="text" value="<%= details.email %>" name="email">
      <input type="text" value="<%= details.codigo %>" name="codigo">
      <input type="text" value="<%= details.especialidade %>" name="especialidade">
      <br><br>
      <button button class="btn btn-secondary"><a style="color:ghostwhite; text-decoration: none; " href="/show">Voltar</a></button>
      <button button class="btn btn-secondary" type="submit">Editar</button>
    </form>
  <% }) %>
 
</body>
